root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Use 2 spaces since npm does not respect custom indentation settings
[package.json]
indent_style = space
indent_size = 2
